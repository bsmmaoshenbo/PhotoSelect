<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:paddingLeft="15dp"
    android:paddingEnd="15dp"
    android:paddingRight="15dp">

    <ImageView
        android:id="@+id/iv_thumb_image"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_centerVertical="true"
        android:background="#f5f5f5"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/iv_thumb_image"
        android:layout_toRightOf="@id/iv_thumb_image"
        tools:ignore="RelativeOverlap">

        <TextView
            android:id="@+id/tv_photo_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#212121"
            android:textSize="16sp"
            tools:text="相机胶卷" />

        <TextView
            android:id="@+id/tv_photo_album_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_photo_album_name"
            android:layout_alignStart="@id/tv_photo_album_name"
            android:layout_alignLeft="@id/tv_photo_album_name"
            android:layout_marginTop="4dp"
            android:textColor="#212121"
            android:textSize="12sp"
            tools:text="2543" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/jiantou_right"
        tools:ignore="ContentDescription" />
</RelativeLayout>