<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#90ffffff"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPaddingBottom="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_shoot_image_part"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#f5f5f5">

                <ImageView
                    android:id="@+id/iv_shoot_type_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />

                <View
                    android:id="@+id/view_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#30000000" />

                <LinearLayout
                    android:id="@+id/ll_shoot_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/iv_shoot_type_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/photo_server_basic_icon_white"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tv_shoot_type_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="#ffffff"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:text="基础实拍服务" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:id="@+id/tv_photo_apply_type_price_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="11dp"
                    android:text="@string/price"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_shoot_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_photo_apply_type_price_title"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@id/tv_photo_apply_type_price_title"
                    android:layout_toRightOf="@id/tv_photo_apply_type_price_title"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    tools:ignore="ObsoleteLayoutParam,RelativeOverlap"
                    tools:text="¥300起" />

                <TextView
                    android:id="@+id/tv_photo_apply_type_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_photo_apply_type_price_title"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:textColor="#212121"
                    android:textSize="12sp"
                    tools:text="根据需求拍摄创作，提供无水印原片，提升房源吸引力。" />

                <ImageView
                    android:id="@+id/iv_photo_server_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:src="@drawable/voucher_item_checkbox_selector"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tv_know_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_photo_apply_type_tips"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:drawableEnd="@mipmap/arrow_right_30px_212121"
                    android:drawableRight="@mipmap/arrow_right_30px_212121"
                    android:drawablePadding="5dp"
                    android:text="@string/learn_more"
                    android:textColor="#212121"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>