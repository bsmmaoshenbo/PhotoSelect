<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/actionbarwidget_rl"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/actionbarwidget_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/actionbarwidget_back_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:src="@mipmap/back_black_new"
            tools:ignore="ContentDescription,RtlSymmetry" />

        <TextView
            android:id="@+id/actionbarwidget_back_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#212121"
            android:textSize="15sp"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/actionbarwidget_more_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingEnd="15dp"
        android:paddingRight="15dp"
        android:text=""
        android:textColor="#212121"
        android:textSize="15sp"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/actionbarwidget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:focusable="true"
        android:maxLines="1"
        android:text=""
        android:textColor="#212121"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/actionbarwidget_moreImg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:src="@mipmap/introduce"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/actionbarwidget_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#bdbdbd" />

</RelativeLayout>